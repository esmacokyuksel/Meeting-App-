@model UserInfo
@{
    ViewBag.Title = "Application Details";
}

@{
    var className = @Model.WillAttend == true ? "primary":"danger";
}

<main class="text-center">
    <h1 class="h4">Application Details</h1>
    <p>
        <span class="badge text-bg-@className">
            @if(Model.WillAttend == true) {
                <text>Agree</text>
            } else {
                <text>Disagree</text>
            }
        </span>
    </p>
    <p>Name: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Number: @Model.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@className">Participant list</a>
</main>